<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/a4"
            style="@style/PaperText"
            android:layout_width="@dimen/short_a4"
            android:layout_height="@dimen/long_a4"
            android:text="A4" />

        <TextView
            android:id="@+id/a3"
            style="@style/PaperText"
            android:layout_width="@dimen/short_a3"
            android:layout_height="@dimen/long_a3"
            android:text="A3" />

        <TextView
            android:id="@+id/a5"
            style="@style/PaperText"
            android:layout_width="@dimen/short_a5"
            android:layout_height="@dimen/long_a5"
            android:text="A5" />

        <TextView
            android:id="@+id/legal"
            style="@style/PaperText"
            android:layout_width="@dimen/short_legal"
            android:layout_height="@dimen/long_legal"
            android:text="Legal" />

        <TextView
            android:id="@+id/letter"
            style="@style/PaperText"
            android:layout_width="@dimen/short_letter"
            android:layout_height="@dimen/long_letter"
            android:text="Letter" />
    </LinearLayout>

</HorizontalScrollView>